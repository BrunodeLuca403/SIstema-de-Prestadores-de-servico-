@using DevIO.App.Extensions
@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Excluir Fornecedor " + Model.Nome;
}

<h4>@ViewData["Title"]</h4>

<h6 style="color:red">Essa ação sera permanente, Após deletar o fornecedor todos os produtos serão exluidos automaticamente.</h6>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @this.FormatoDocumento(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-success" /> 
        <a type="button" class="btn btn-danger" href="javascript:window.history.back();">Voltar</a>
    </form>
</div>

<partial name="_DetalhesEndereco" />
