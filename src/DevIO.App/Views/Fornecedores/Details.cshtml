@using DevIO.App.Extensions
@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h4>@ViewData["Title"]</h4>


<div>
    <h6>Informações apenas para leitura</h6>
    <hr />
    <dl class="row">
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @this.FormatoDocumento(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>

<div>
     <div class="form-group">
         <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
         <a type="button" class="btn btn-danger" href="javascript:window.history.back();">Voltar</a>
     </div>
</div>
 
<partial name="_DetalhesEndereco" />


