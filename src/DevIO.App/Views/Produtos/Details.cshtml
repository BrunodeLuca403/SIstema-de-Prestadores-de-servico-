@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto - " + Model.Nome;
}
<div>
<h4>@ViewData["Title"]</h4>
</div>

   <div class="row">
       <div class="col-sm-4">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width:300px; height:300px"/>
        </div>
      <div class = "col-sm-6">
       <dl> 
        <dt> 
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Model.Valor.ToString("C")
        </dd>
         <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
       </dl>
   <div class="form-group">
         <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
         <a type="button" class="btn btn-danger" href="javascript:window.history.back();">Voltar</a>
     </div>
  </div>
</div>
